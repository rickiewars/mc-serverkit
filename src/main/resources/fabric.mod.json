{
	"schemaVersion": 1,
	"id": "serverkit",
	"version": "${version}",
	"name": "ServerKit",
	"description": "This mod adds a variety of server-side features to a server.",
	"authors": [
		"Rickiewars"
	],
	"contact": {
		"homepage": "https://fabricmc.net/",
		"sources": "https://github.com/FabricMC/fabric-example-mod"
	},
	"license": "MIT License",
	"environment": "server",
	"entrypoints": {
		"main": [
			"com.rwconnected.serverkit.ServerKit"
		]
	},
	"mixins": [
		"serverkit.mixins.json"
	],
	"depends": {
		"fabricloader": ">=${loader_version}",
		"minecraft": "~${minecraft_version}",
		"java": ">=21"
	},
	"suggests": {
		"another-mod": "*"
	}
}